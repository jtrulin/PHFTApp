<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGray"
    tools:context=".MainMenu">

    <ImageButton
        android:id="@+id/wrkButton"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/workoutbutton"
        android:scaleType="fitXY"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/socButton"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/socialbutton"
        android:scaleType="fitXY"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/wrkButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/reqButton"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/trainerbutton"
        android:scaleType="fitXY"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/socButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
