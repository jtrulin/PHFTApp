<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/TrainerID"
    android:padding="16dp">

    <!-- Back Button at the Top Left -->
    <Button
        android:id="@+id/backToMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cyan"
        android:fontFamily="@font/teko"
        android:text="Back"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold" />

    <!-- Horizontal Layout for Trainer Info -->
    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="197dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- Trainer Image -->

        <!-- Trainer Info -->
        <FrameLayout
            android:layout_width="2dp"
            android:layout_height="188dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image"
                android:layout_width="137dp"
                android:layout_height="199dp"
                android:contentDescription="Trainer image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/trainer_image" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Trainer Name -->
            <TextView
                android:id="@+id/trainer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Josh Richard"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- RatingBar -->
            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:numStars="5"
                android:stepSize="0.5" />

            <!-- Overall Rating -->
            <TextView
                android:id="@+id/overall_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Overall Rating: 0.0"
                android:textSize="16sp" />

        <!-- Message Button -->
        <Button
            android:id="@+id/message_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message Trainer" />
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:fontFamily="@font/teko"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="10dp" />
            <!-- Message Button -->
            <Button
                android:id="@+id/message_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message Trainer" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
