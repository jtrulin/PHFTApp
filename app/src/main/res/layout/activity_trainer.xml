<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TrainerID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Trainer Image -->

    <!-- Trainer Info -->

    <FrameLayout
        android:layout_width="121dp"
        android:layout_height="170dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/trainer_image"
            android:contentDescription="Trainer image" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/backToMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cyan"
            android:text="Back"
            android:textColor="@color/black"
            android:fontFamily="@font/teko"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />

        <!-- Trainer Name -->
        <TextView
            android:id="@+id/trainer_name"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Josh Richard"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- RatingBar -->
        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:numStars="5"
            android:stepSize="0.5" />

        <!-- Overall Rating -->
        <TextView
            android:id="@+id/overall_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Overall Rating: 0.0"
            android:textSize="16sp" />

        <!-- Message Button -->
        <Button
            android:id="@+id/message_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message Trainer" />
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:fontFamily="@font/teko"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="10dp" />
    </LinearLayout>


</LinearLayout>

